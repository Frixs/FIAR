{
  // ----------
  // CORE CONFIGURATION
  // ---

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "ConnectionStrings": {
    // https://www.connectionstrings.com
    //"DefaultConnection": "Server=.;Database=serverroom;Trusted_Connection=True;MultipleActiveResultSets=true" // MSSQL
    "DefaultConnection": "User ID=postgres;Password=postgres;Host=localhost;Port=5432;Database=fiar;" // PostgreSQL
  },

  "AllowedHosts": "*",

  "PathBase": "", // Start with '/' if you need to specify base URL path (leave empty for no URL path)

  // ----------
  // USER-DEFINED CONFIGURATION (CONFIG-BOX)
  // ---

  "DatabaseConnection": {
    "Technology": "PostgreSQL" // "MSSQL" (default), "PostgreSQL"
  },

  "Jwt": {
    "SecretKey": "ThisIsMySuperSecretKey", // Must be > 16 characters
    "Issuer": "ServerRoom", // The one who issued the token - unique for our domain
    "Audience": "ServerRoom",
    "Expires": "7776000" // Seconds (remote connection expiration - client)
  },

  "MessageService": {
    "Email": {
      "Host": "smtp.gmail.com", // Default: smtp.gmail.com
      "Port": "587", // Default: 587
      "Credentials": { // Credentials to your ServerRoom's mailbox
        "Username": "", // Your mailbox address
        "Password": ""
      },
      "SSL": "True", // False, True (default)
      "MailFrom": {
        "Address": "notification@serverroom.it", // Email address from which users get replies (during custom method, it is the same as the credentials username) (max length 255 characters)
        "Name": "ServerRoom" // Sender name holder (max length 255 characters)
      }
    }
  },

  "Configuration": {
    "WebLoginSessionExpires": "7776000", // Seconds (expiration of web login session)
    "DateTimeFormat": {
      "Standard": "d.M. HH:mm" // Leave empty quotes for default value
    }
  }
}
